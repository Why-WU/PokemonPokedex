/**index.wxss**/

.ctntitle {
  display: block;
  width: 100%;
  font-size: 28rpx;
  text-align: left;
  padding: 30rpx 30rpx 16rpx 30rpx;
  box-sizing: border-box;
  color: #888;
}

.detailctn {
  width: 100%;
  color: #353535;
  font-size: 34rpx;
  padding: 16px;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}

.spriteList {
  width: 100%;
  background-color: #fff;
}

.sprite {
  display: block;
  margin: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 34rpx;
  color: #353535;
  border-bottom: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}

.sprite:last-child {
  border-bottom: 0px;
}

.sprite .name {
  margin-left: 20rpx;
}

.sprite .types {
  float: right;
}

.sprite .types .m-type {
  margin-left: 20rpx;
}
